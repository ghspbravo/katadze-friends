.app-container 
    scroll-behavior: smooth

#root 
    overflow-x: hidden
h2 
    BebasH3()
    text-transform uppercase

h1  
    OpenH1()
    margin: 15px 0
    &.lead
        OpenH1ExtraBold()
        color: #464646
    &.super
        BebasH2()
span 
    color: acsent
    &.error
        color: alert !important

span.small 
    color: inherit 
    font-size 14px

hr   
    border-color: secondary

p
    OpenH1LightAlt()
    margin-bottom: 5px
    color: black
    white-space: pre-line
    &.lead
        OpenH1Light()
.small
    OpenH4Light()
a
    OpenH1LightAlt()
    text-decoration none
    color: black
    &:hover
        color: acsent !important

a.no_lead 
    color: white !important
    &:hover
        color: white !important
        text-decoration underline
li  
    OpenH1LightAlt()

ol   
    list-style decimal

img 
    max-width 100%
.icon 
    width 35px
    height 35px
    margin: 5px

div[class^=col-] .row
    margin-left: 0
    margin-right: 0

object 
    margin: 10px

section 
    position relative
    padding-top: 100px
    padding-bottom 100px 
    &[id$=header]
        box-shadow: inset 0 1500px 0 rgba(0,0,0,0.3)
        background-size: cover
        background-position: center

section.jumbotron 
    padding: 0px 10px 10px 10px
    margin-bottom: 70px
    border: 1px solid secondaryDark
    & div.row 
        margin-left: 0
        margin-right: 0
    & > div.head
        background-color: secondary;
        margin: 0 -10px;
        padding: 10px 20px;
    & > div.content 
        padding: 50px 0;
        & > div
            margin-top: 15px
            margin-bottom 15px
    & input, select, textarea
        border: 1px solid secondary
        padding: 10px !important
        color: black
        &::placeholder
            color: secondary
    & button 
        border-bottom: none 
        margin-top 0

.header 
    text-align center
    background-size: cover
    background-position-y: center
    & h2 
        color: white
        text-shadow: -1px -1px 0 secondaryDark, 1px -1px 0 secondaryDark, -1px 1px 0 secondaryDark, 1px 1px 0 secondaryDark;

span.lead 
    border-bottom: 2px solid acsentAlt;
    padding-bottom: 10px
    color: black

form input,
form select,
form textarea
    OpenH4Light()
    width: 100%;
    padding: 20px 0 0 0 !important
    color: secondaryDark
    border: none;
    border-bottom: 1px solid secondaryDark;
    background-color: transparent;

form input[type=file]
    display none

form input:focus {
    border-bottom: 2px solid #FFBB00;
}

form input
    margin 10px 0
    border-radius: 0

form select
    height 50px

form textarea
    resize: vertical
    min-height: 50px !important

form input:focus,
form button:focus,
form select:focus,
form textarea:focus
    outline: none;

form input:focus::placeholder,
form textarea:focus::placeholder
    color: transparent;

form button
    OpenH4()
    background-color transparent
    border: none;
    border-bottom: 2px solid acsentAlt;
    padding: 10px 0;
    text-transform: uppercase;
    margin-top: 50px;
    cursor: pointer;
    outline: none

button 
    background-color transparent
    border: none;
    cursor: pointer;
    outline: none
    &:hover  
        color: acsent
    &.lead
        OpenH4()
        color white
        background-color acsent
        border-bottom: none
        border-radius: 22.5px
        padding: 10px
        width 100%
        margin-top: 30px
        margin-bottom: 30px
        &:hover
            color: white


.stars .star {
  float: left;
}
.stars .star polygon {
  fill: #d8d8d8;
}
.stars[data-stars] .star polygon {
  fill: #ffd055;
}
.stars[data-stars="1"] .star:nth-child(1) ~ .star polygon {
  fill: #d8d8d8;
}
.stars[data-stars="2"] .star:nth-child(2) ~ .star polygon {
  fill: #d8d8d8;
}
.stars[data-stars="3"] .star:nth-child(3) ~ .star polygon {
  fill: #d8d8d8;
}
.stars[data-stars="4"] .star:nth-child(4) ~ .star polygon {
  fill: #d8d8d8;
}
.stars[data-stars="5"] .star:nth-child(5) ~ .star polygon {
  fill: #d8d8d8;
}

.comment
    text-align: justify

.errors-alert 
    position fixed
    z-index 9999
    left: 50%;
    transform: translateX(-50%);
    transition: opacity 0.5s;
    opacity: 0;
    & div[class^='col-']
        padding: 10px 20px
        background-color: alert 
        border-radius: 15px
    & p 
        color: white
    & button.close-button
        color: white
    
.messages-alert 
    position fixed
    z-index 9999
    left: 50%;
    transform: translateX(-50%);
    transition: opacity 1s;
    opacity: 0;
    & div[class^='col-']
        padding: 10px 20px
        background-color: success 
        border-radius: 15px
    & p 
        color: white
    & button.close-button
        color: white
    
button.close-button
    position: absolute;
    right: 10px;
    top: 0px;
    padding: 5px;
    margin:  0
    border: none

label.file {
    width: 100%;
    padding: 10px;
    border: 1px solid secondary;
    cursor:  pointer;
    text-align: center;
}

.popup-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index 999
}

.popup {
  position: relative;
  background-color: white;
  padding-top 50px
  padding-bottom 50px
}

.close-popup {
  position: absolute;
  right: 0;
  top: 0;
  padding: 5px 10px;
  cursor: pointer;
}

.custom_text
    white-space: pre-line;
    & a  
        font-weight: 700
    & ul  
        list-style: disc inside
    & ol 
        list-style: decimal  
