// DOPS

.justify-space-around {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.justify-space-between {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.justify-center {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.justify-right {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.align-center {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.vh-100 {
  height: 100vh;
}

.vh-50 {
  height: 50vh;
}

.upper {
	text-transform uppercase
