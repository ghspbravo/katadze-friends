    background-image url('../resourses/Gids/header-image.png')
    background-repeat no-repeat
    background-size: cover
    & h1,h2,p,button,a
        color: white

.searchBox
    & > div
        padding: 0
    & input
        padding: 15px 10px !important
        background-color: white
        width 100%
        OpenH4()
    & button
        padding: 13px 20px !important
        margin-top: 10px
        border-bottom: none
