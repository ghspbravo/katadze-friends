        padding-left: 0
        padding-right 0

.gid-card .gid-description {
    border-bottom: 1px secondary solid;
    border-top: 1px secondary solid;
}

.tour-preview
    height 300px
    box-shadow: inset 0 1500px 0 rgba(0,0,0,0.3)

.price-popup
