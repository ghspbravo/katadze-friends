.profile-image-small
    & img 
        height 80px
        border-radius: 50%
        object-fit: cover;

.profile-nav a 
    BebasH5Book()
    text-transform uppercase
    padding-bottom: 2px

a.profile-current
    position relative
    &:after
        content: ''
        position absolute
        bottom: 0
        left 0
        width: 100%
        height 2px
        background-color black

.avatar-container
    position relative
    & > img
        height 300px
        object-fit: cover
        max-width 100%

select.bordered
    border: 1px solid secondary
    padding: 10px !important
    color: black
    &::placeholder
        color: secondary

.avatar-big-preview
    width 175px
    height 260px
    position relative
    background-color lightgray
    overflow hidden

.avatar-small-preview
    width 45px
    height 45px
    background-color lightgray
    position relative
    overflow hidden
    border-radius: 50%

.profile-photos
    margin: 25px 0
    &-item 
        margin: 10px 15px
        width 250px
        height 250px
        position relative
        & img 
            width 100%
            height 100%
            object-fit: contain
        &-destroy 
            position absolute
            top: -5px
            right -5px
            height 25px
            width 25px
            background-color red
            border-radius: 50%
            display none
            justify-content: center
            align-items: center
            visibility hidden
            & button
                padding: 0
                font-weight 600
                margin: 0 auto
                width fit-content
                user-select none
                padding: 5px
        &-main
            position absolute
            bottom 0
            left 50%
            transform: translateX(-50%)
            opacity 0
            visibility hidden
            background-color rgba(0,0,0,0.3)
            width 100%
            text-align center
            transition: opacity  0.3s
            & button 
                color: white
                font-weight 600
                &:hover
                    color: acsent

.profile-photos-item:hover .profile-photos-item
    &-destroy 
        display flex
        visibility visible
    &-main
        visibility visible
        opacity 1
