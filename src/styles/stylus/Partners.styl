#partners-header
    background-image url('../resourses/Partners/header-image.jpg')
    & h2, p
        color: white

.category-name
    position relative
    overflow hidden
    & p  
        text-transform uppercase
    & :after
        content ' '
        display: inline-block;
        border: secondaryDark 1px solid;
        border-style: inset;
        margin-left: 20px;
        width: 100%;
        position: absolute;
        top: 45%;

.category-delimiter hr
    border-color: secondaryDark

.week li
    margin: 20px;
    padding: 20px 25px;
    border-radius: 50%;
    border: 1px solid;
    user-select none

.coupon-control
    display flex
    flex-direction: column
    align-items: center
    &__button
        OpenH4()
        text-transform uppercase
        border-bottom: 2px solid acsentAlt
        font-size 24px
        padding-bottom 10px
        &_activated
            border-bottom-color: alert
    &__expire-date
        font-size 12px
        text-align center
        line-height: 1;
        margin-bottom: 0;
        margin-top: 7px;