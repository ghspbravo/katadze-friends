#partners-header
    background-image url('../resourses/Partners/header-image.jpg')
    & h2, p
        color: white

.category-name
    position relative
    overflow hidden
    & p  
        text-transform uppercase
        font-weight 900
    & :after
        content ' '
        display: inline-block;
        border: acsentAlt 1px solid;
        margin-left: 20px;
        width: 100%;
        position: absolute;
        top: 45%;

.category-delimiter hr
    border-color: secondaryDark

.week li
    margin: 20px;
    padding: 20px 25px;
    border-radius: 50%;
    border: 1px solid;
    user-select none

.coupon-control
    display flex
    flex-direction: column
    align-items: center
    &__button
        OpenH4()
        text-transform uppercase
        border-bottom: 2px solid acsentAlt
        font-size 24px
        padding-bottom 10px
        &_activated
            border-bottom-color: alert
    &__expire-date
        font-size 12px
        text-align center
        line-height: 1;
        margin-bottom: 0;
        margin-top: 7px;

.membership-alert
    font-size 24px
    color: #fb0
    text-transform uppercase
    line-height 1.3
    @media(max-width: 568px)
        font-size 18px
    .note
        color: inherit;
        font-size 20px
        top: 0

.membership-note,
.membership-note *
    @media(max-width: 568px)
        font-size 12px

.list-card
    margin-top 30px
    margin-bottom 30px

.partner-item
    &__description
        font-size 21px
        @media(max-width: 568px)
            font-size 14px
            line-height 1.3