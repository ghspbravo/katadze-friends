.navbar 
    padding: 30px 0
    top: 0;
    left: 0;
    width: 100%;
    z-index: 10;
    transition: opacity 0.5s
    position relative
    & a
        BebasH5Book()
        
.navbar-bg-large > .navbar-inner
    top: 0
    height 160px
    position: fixed;
    background-color: white;
    & > div
        padding-top: 30px
.navbar-bg-large
    padding: 80px 0
    & a  
        color: black
    & .logo
        height 120px
        background-image url('../resourses/LogoBlackLabel.png')
    & svg .burger-line
        stroke: black

