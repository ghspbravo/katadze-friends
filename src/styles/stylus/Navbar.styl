.navbar-mobile > .navbar-inner
    top: 0
    height 80px
    padding: 0
    position: fixed;
    background-color: white;
    z-index 5
    box-shadow: 0 0 10px rgba(0,0,0,0.3)
.navbar-mobile
    padding: 40px 0
