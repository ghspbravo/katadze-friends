.logo
    background-size: contain
    background-position: center
    background-repeat no-repeat

a.active-nav
    color: acsent

.mobile-nav
    display none
    position: fixed;
    top: -200px;
    background-color: white;
    transition: none
    z-index 1
    & li  
        opacity 0

.header-avatar 
    position absolute
    top: -45%
    right 0
    transform: translateX(125%)
    width 45px
    height 45px
    overflow hidden
    &-image
        border-radius: 50%
        width 100%
        height auto
        object-fit: cover