#events-header
    background-image url('../resourses/Events/header-image.jpg')
    & h2
        color: white

section.eventSection
    &:nth-child(even)
        background-color secondaryLight

section.idSection
    &:nth-child(even)
        & .section-id
            transform: translateX(-30%)
    &:nth-child(odd)
        & .section-id
            right: 0
            transform: translateX(10%)
    & .section-id
        BebasH1()
        position: absolute
        color: acsent
        top: 10%

.steps
    & li
        OpenH1()
        color: acsentAlt
        text-transform uppercase
    & span 
        BebasH3()
        color: acsentAlt 
        margin-right: 100px

.tarif-selector
    & button
        margin: 30px 0   
        background-color acsent
        border-radius: 25px 25px 0px 25px;
        &.active 
            background-color acsentAlt 
        & p  
            color: white
.tarif-description
    background-color acsentAlt
    border-radius: 30px 30px 30px 30px;
    padding: 10px 50px
    & p  
        OpenH4Light()
        color: white
.tarif-price
    & p  
        color: acsent
        text-transform uppercase
    border-radius: 25px 25px 25px 25px;
    border: 2px acsent solid
    padding: 10px 40px

.tarif-button
    & p  
        color: white
        text-transform uppercase
    background-color acsent
    border-radius: 25px 25px 25px 25px;
    padding: 10px 40px
